<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">faq_questions_form_answer.questions_form_answer_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <namespace>faq_questions_form_answer</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>faq_questions_form_answer.questions_form_answer_data_source</dep>
        </deps>

        <buttons>
            <button name="back">
                <label>Back</label>
                <class>back</class>
                <url path="faq/questions/index"/>
            </button>
            <button name="save">
                <label translate="true">Save</label>
                <class>save primary</class>
            </button>
        </buttons>
    </settings>

    <dataSource name="questions_form_answer_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="faq/questions/save"/>
        </settings>
        <dataProvider class="Favicode\Faq\Ui\Component\Form\DataProvider" name="questions_form_answer_data_source">
            <settings>
                <requestFieldName>faq_id</requestFieldName>
                <primaryFieldName>faq_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label/>
        </settings>

        <hidden name="faq_id" sortOrder="1">
            <settings>
                <dataScope>faq_id</dataScope>
            </settings>
        </hidden>

        <input name="question_text" sortOrder="10">
            <settings>
                <elementTmpl>ui/form/element/text</elementTmpl>
                <label translate="true">Question</label>
                <dataScope>question_text</dataScope>
            </settings>
        </input>

        <textarea name="question_answer" sortOrder="20">
            <settings>
                <label translate="true">Answer</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataScope>question_answer</dataScope>
            </settings>
        </textarea>

        <checkbox name="is_faq" sortOrder="30">
            <settings>
                <label translate="true">Is FAQ</label>
                <valueMap>
                    <map name="false" xsi:type="string">0</map>
                    <map name="true" xsi:type="string">1</map>
                </valueMap>
                <dataScope>is_faq</dataScope>
            </settings>
        </checkbox>

    </fieldset>

</form>
