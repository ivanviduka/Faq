<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="css/faq.css" rel="stylesheet" type="text/css"  />
    </head>
    <body>
        <referenceBlock name="product.info.details">
            <block class="Favicode\Faq\Block\ProductFaq" name="product.info.faq"
                   template="Magento_Catalog::product/view/faq.phtml" group="detailed_info">
                <arguments>
                    <argument name="at_call" xsi:type="string">getFaq</argument>
                    <argument name="at_code" xsi:type="string">faq</argument>
                    <argument name="at_label" xsi:type="string">none</argument>
                    <argument name="sort_order" xsi:type="string">50</argument>
                    <argument name="title" translate="true" xsi:type="string">FAQ</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
